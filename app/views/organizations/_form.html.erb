<%= form_for :organization do |f| %>
    <% if @organization.errors.any? %>
      <div id="errors">
          <h2><%= pluralize(@organization.errors.count, "error") %> stopped this post from saving</h2>
          <ul>
              <% @organization.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
          </ul>
      </div>
    <% end %>
    
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :phone %><br>
      <%= f.text_field :phone %>
    </p>

    <p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </p>

    <p>
      <%= f.label :website %><br>
      <%= f.text_field :website %>
    </p>

    <p>
      <%= f.label :logo %><br>
      <%= f.file_field :logo %>
    </p>

    <p>
    <%= f.submit %>
    </p>

  <% end %>